<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_sender_name"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_sender_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sender_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="bsamdnabsdmhadjhakjsdhjkasdhjkashljsdkasdasdjhshajdhajsdhkadshdjk"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="center|right"
                android:textSize="14sp"
                android:text="11/02"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:weightSum="1"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_sender_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_un_read"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="center|right"
                android:text=""
                android:textColor="#FFA500"
                android:textSize="16sp"
              />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>